script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
script(src='./rich_checkbox_button/rich_checkbox_button.js')

mixin rich_checkbox_button(list,list_op)
    div.rich_checkbox_button
        each i,j in list
            div.checkbox
                label.container= i
                    input(type="checkbox" name="check" placeholder=i)
                    span.checkmark
                    p=list_op[j]






