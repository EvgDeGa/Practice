script(src='./range_slider/range_slider.js')


mixin range_slider(text, max)
    - buf = "₽ - &#160; "
    div.slider_container
        div.slider_price__container
            p.preview= text
            div.price_container
                p(id="first_price").first_price 0
                p ₽ -&#160;
                p(id="second_price").second_price= max
                p ₽
        div(id="slider").slider
            div(id="range").range
            div(id="thumb").thumb
            div(id="thumb2").thumb2


    //p( id="ball" class="ball")= min + " - "



+range_slider("диапазон цены", 10000)